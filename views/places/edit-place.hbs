<h1>Editar lugar</h1>
{{err}}
<form  action="/places/edit" method="POST">
<input name="id" type="hidden" value= "{{place.id}}">
<label>
    Name:
    <input type="text" name= "name" value="{{place.name}}">
</label>

<label>
   Type:
    <input type="text" name= "type" value= "{{place.type}}">
</label>

<label>Address</label>
    <input type="text" name="latitude" placeholder="latitude" value="{{ place.location.coordinates.[1]}}">
    <input type="text" name="longitude" placeholder="longitude" value="{{ place.location.coordinates.[0]}}">

<label>
    <input type="submit">
</label>

</form>

<a href="/">Volver al menu</a>
